<h1>Listing products</h1>


      <%= form_tag products_path, :method => 'get' do %>
  <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "検索", :name => nil %>
  </p>
      <% end %>

<p>
OR検索ヒット数 <%= @or_hits %> 件
AND検索ヒット数 <%= @and_hits %> 件
</p>

</p>


<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Tag1</th>
      <th>Tag2</th>
      <th>Tag3</th>
      <th>Tag4</th>
      <th>Tag5</th>
      <th>Tag6</th>
      <th>Tag7</th>
      <th>Tag8</th>
      <th>Tag9</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% if false %>
  <tbody>
  <% @products[0].each do |product| %>
      <tr>
        <td><%= product.tag %></td>
        <td><%= product.tag1 %></td>
        <td><%= product.tag2 %></td>
        <td><%= product.tag3 %></td>
        <td><%= product.tag4 %></td>
        <td><%= product.tag5 %></td>
        <td><%= product.tag6 %></td>
        <td><%= product.tag7 %></td>
        <td><%= product.tag8 %></td>
        <td><%= product.tag9 %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

